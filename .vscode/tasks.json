{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build OpenGL",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/main.cpp",                // Main source file
                "${workspaceFolder}/src/glad.c",                  // GLAD for OpenGL function loading
                "${workspaceFolder}/src/imgui.cpp",               // ImGui main source file
                "${workspaceFolder}/src/imgui_draw.cpp",          // ImGui draw functions
                "${workspaceFolder}/src/imgui_tables.cpp",        // ImGui table functions
                "${workspaceFolder}/src/imgui_widgets.cpp",       // ImGui widget functions
                "${workspaceFolder}/src/imgui_demo.cpp",          // ImGui demo file (optional)
                "${workspaceFolder}/src/imgui_impl_glfw.cpp",     // ImGui GLFW backend implementation
                "${workspaceFolder}/src/imgui_impl_opengl3.cpp",  // ImGui OpenGL3 backend implementation
                "-o", "${workspaceFolder}/OpenGL.exe",            // Output executable file
                "-I", "${workspaceFolder}/include",               // Include path for header files
                "-I", "${workspaceFolder}/include/imgui",         // ImGui headers directory
                "-L", "${workspaceFolder}/lib",                   // Library path for linking
                "-lglfw3dll",                                     // GLFW library for window/context management
                "-lopengl32"                                      // OpenGL library for rendering
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Run OpenGL",
            "type": "shell",
            "command": "${workspaceFolder}\\OpenGL.exe",
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/c"]
                }
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ],
    "compounds": [
        {
            "name": "Build and Run",
            "tasks": [
                "C/C++: gcc.exe build OpenGL",
                "Run OpenGL"
            ]
        }
    ]
}
